<Window x:Class="MaloWLauncher.NewVersionPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaloWLauncher"
        mc:Ignorable="d"
        Title="New Version" Height="200" Width="300">
    <Grid>
        <Label x:Name="label" Content="A new version of MaloWLauncher is available" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Button Content="Open download page in browser" Click="Download_Clicked" FontSize="12" Height="35" Width="200" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" />
    </Grid>
</Window>
